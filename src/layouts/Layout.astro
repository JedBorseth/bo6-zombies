---
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>COD - Zombies App</title>
    <ClientRouter />
    {import.meta.env.PROD && <script is:inline src="/registerSW.js" />}
    {
      import.meta.env.PROD && (
        <link rel="manifest" href="/manifest.webmanifest" />
      )
    }
  </head>
  <body>
    <slot />
    {
      Astro.url.pathname !== "/" && (
        <a
          href="javascript:history.back()"
          class="fixed bottom-4 left-4 bg-red-500 rounded p-4 text-white"
        >
          <button>Back</button>
        </a>
      )
    }
  </body><!-- 
  
  This app has some yucky styling. I spent very little time on it so deal with it.  :)
  
  -->
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
